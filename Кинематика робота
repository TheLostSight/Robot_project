#include <math.h>

#define Pi 3.14159

float velocity = 0.0;
double angle = 0.0;
int coordinates[2] = {0,0};
const float static_speed = 5.0; // Константа: движение с этой скоростью в заданном направлении
int MOTOR_PIN_ARRAY[6] = {2,3,4,5,6,7}; // пины трех моторов
//int MOTOR_PIN_PWM[3] = {8,9,10}; // пины для ШИМ'а трех моторов
float v[3] = {0,0,0}; // скорости моторов (то как они вращаются)
int radius = 2; // радиус колёс

void setup() {
  // put your setup code here, to run once:
  for(int i=0; i<6; i++)
    pinMode(MOTOR_PIN_ARRAY[i], OUTPUT);
}

void loop() {
  // put your main code here, to run repeatedly:
  for(int i=1; i<4; i++) {
    getSpeed(angle, i);
    v[i-1] = velocity;
  }
  motorControl(v);
}

void getSpeed(double angle, int motor_num) {
  switch(motor_num) {
    case 1:
        velocity = static_speed * cos(Pi/2 - angle) / radius;
        break;
    case 2:
        velocity = static_speed * cos(angle - Pi/6) / radius;
        break;
    case 3:
        velocity = static_speed * cos(angle + Pi/6) / radius;
        break;
  }
}

void motorControl(float velocities[]) {
  for(int i=0; i<3; i++)
    velocities[i] = map(velocities[i], -static_speed / radius, static_speed / radius, -255.0, 255.0); // Преобразование скорости в интервал [-255;255] во float, послед. использование в int;
  for(int i=0; i<=4; i+=2) {
    if(velocities[i] > 0){
      analogWrite(MOTOR_PIN_ARRAY[i], (int)velocities[i]);
      digitalWrite(MOTOR_PIN_ARRAY[i+1], 0);
    }
    else if(velocities[i] < 0) {
      analogWrite(MOTOR_PIN_ARRAY[i], 255 + (int)velocities[i]);
      digitalWrite(MOTOR_PIN_ARRAY[i+1], 1);
    }
    else {
      digitalWrite(MOTOR_PIN_ARRAY[i], 0);
      digitalWrite(MOTOR_PIN_ARRAY[i+1], 0);
    }
  }
}

float map(float x, float in_min, float in_max, float out_min, float out_max)
{
  return (x - in_min) * (out_max - out_min) / (in_max - in_min) + out_min;
}
